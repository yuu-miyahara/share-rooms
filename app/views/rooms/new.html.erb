<h1>ルームを作る</h1>


<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @room, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :room_name, 'ルーム名' %>
        <%= f.text_field :room_name, class: 'form-control' %>
      </div>
      
      <div class="form-group ">
        <%= f.label :password, 'キー【半角英数字】' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'キーの確認【半角英数字】' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <%= hidden_field_tag :nil_password, 1 %>
      <%= f.submit 'ルームを作る', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>