<h1>ルームを作る</h1>


<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_for(@room, url: rooms_path, method: :post) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <%= f.hidden_field :password, :value => "password" %> <!-- attendancesテーブルのidを渡す -->
      <%= f.hidden_field :password_confirmation, :value => "password" %>
      <%= f.hidden_field :nil_password, :value =>0 %>
      
      <%= f.label :room_name, 'ルーム名' %>
      <%= f.text_field :room_name, class: 'form-control' %>
      
      <%= f.submit "ルームを作る", class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>